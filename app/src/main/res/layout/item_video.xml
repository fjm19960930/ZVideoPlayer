<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    tools:context="com.pivot.zvideoplayer.ListVideoActivity">
    
    <com.pivot.libvideocore.THVideoView
        android:id="@+id/th_video_view"
        android:layout_width="match_parent"
        android:layout_height="400dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/video_list_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="标题"
            android:textSize="14dp"
            android:textColor="@color/colorDialog"/>
        
        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="5dp"
            android:src="@drawable/icon_discuss"/>
        <TextView
            android:id="@+id/video_list_discuss_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="5dp"
            android:text="41"
            android:textSize="14dp"
            android:textColor="@color/colorDialog"/>
        
        <TextView
            android:id="@+id/video_list_play_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="413次播放"
            android:textSize="14dp"
            android:textColor="@color/colorDialog"/>
    </LinearLayout>
    
</LinearLayout>
